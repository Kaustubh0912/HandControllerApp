<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#102a43"
    android:padding="16dp">

    <!-- Title -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/prosthetic_arm_status"
        android:textSize="24sp"
        android:textColor="#bcccdc"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="16dp" />

    <!-- Graph for Sensor 1 -->
    <com.jjoe64.graphview.GraphView
        android:id="@+id/graphSensor1"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#bcccdc"
        android:layout_below="@id/tvTitle"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/tvSensor1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sensor_1"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/graphSensor1"
        android:layout_marginBottom="16dp"
        android:textColor="#486581" />

    <!-- Graph for Sensor 2 -->
    <com.jjoe64.graphview.GraphView
        android:id="@+id/graphSensor2"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#bcccdc"
        android:layout_below="@id/tvSensor1"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/tvSensor2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sensor_2"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/graphSensor2"
        android:layout_marginBottom="16dp"
        android:textColor="#486581" />

    <!-- Connect Button -->
    <Button
        android:id="@+id/btnConnect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/connect_to_bluetooth"
        android:backgroundTint="#486581"
        android:textColor="#FFFFFF"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/bottom_navigation"
        android:layout_marginBottom="16dp" />

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:itemIconTint="@android:color/white"
        app:itemTextColor="@android:color/white"
        app:menu="@menu/bottom_navigation_menu" />

</RelativeLayout>